                        <Label text="Язык распозонования в ГС" />
                        <TextField fx:id="selectAiModelLang" onAction="#selectAiModelLangEnter" promptText="E.x: ru" />
                        <Pane prefHeight="24.0" prefWidth="200.0" />
                     </children>
                  </VBox>
                  <Label prefHeight="18.0" prefWidth="202.0" text="Формат выходного файла" />
                  <ComboBox fx:id="outputFormatBox" prefHeight="8.0" prefWidth="200.0" />
               </children>
            </VBox>
      </children>
    </Pane>
  </children>
