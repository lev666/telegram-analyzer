            </HBox>
            <Label layoutX="281.0" layoutY="32.0" text="Логи" />
            <TextField alignment="CENTER" editable="false" layoutX="590.0" layoutY="51.0" mouseTransparent="true" prefHeight="26.0" prefWidth="200.0" text="Настройка" />
            <CheckBox fx:id="selectAIModel" alignment="CENTER_RIGHT" contentDisplay="TOP" layoutX="590.0" layoutY="98.0" mnemonicParsing="false" prefHeight="46.0" prefWidth="200.0" text="Использовать модель для распознования речи" wrapText="true" />
