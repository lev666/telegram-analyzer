  <columnConstraints>
    <ColumnConstraints />
      <ColumnConstraints />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints />
      <RowConstraints />
  </rowConstraints>
  <children>
    <Pane prefHeight="603.0" prefWidth="803.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
      <children>
            <GridPane gridLinesVisible="true" layoutX="14.0" layoutY="50.0" prefHeight="536.0" prefWidth="550.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="528.0" minWidth="10.0" prefWidth="492.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="90.0" minWidth="10.0" prefWidth="90.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <TextArea fx:id="logTextArea" editable="false" prefHeight="493.0" prefWidth="519.0" />
                  <Button fx:id="startButtom" alignment="CENTER" centerShape="false" disable="true" mnemonicParsing="false" onAction="#startClick" prefHeight="33.0" prefWidth="84.0" scaleShape="false" text="Старт" textOverrun="LEADING_ELLIPSIS" GridPane.rowIndex="2" />
