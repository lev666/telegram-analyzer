            </GridPane>
            <HBox layoutX="14.0" prefHeight="26.0" prefWidth="787.0">
               <children>
                  <TextField fx:id="folderPathField" prefHeight="26.0" prefWidth="649.0" promptText="Директория к исходным файлам" />
